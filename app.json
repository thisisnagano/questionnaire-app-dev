{
  "name": "YABUMI questionnaire",
  "description": "A barebones Node.js app using Express 4",
  "repository": "https://github.com/n-sysdes-co-jp/questionnaire-app-dev",
  "logo": "https://cdn.rawgit.com/heroku/node-js-getting-started/master/public/node.svg",
  "keywords": ["node", "express", "heroku"],
  "image": "heroku/nodejs",
  "env": {
    "API_KEY": "[your org api key]",
    "FROM_ADDRESS": "[mail sender address]",
    "SF_PASSWORD": "[your salesforce password]",
    "SF_USERID": "[your salesforce userID]"
  },
  "addons": [
    {
      "plan": "herokuconnect:demo"
    },
    {
      "plan": "heroku-postgresql:hobby-dev"
    },
    {
      "plan": "scheduler:standard"
    },
    {
      "plan": "papertrail:choklad"
    }
  ]
}
